---
export interface Props {
	repo: {
    name: string
    description: string
    language: string
    stargazers_count: number
    forks: number
    html_url: string
    homepage: string
  }
}

const { repo: { name, description, language, stargazers_count, forks, homepage, html_url } } = Astro.props
---

<a href={homepage || html_url} class="decoration-none" target="_blank" title={name}>
  <div class="p-3 border-base rounded cursor-pointer transition-all hover:opacity-75">
    <p class="flex items-center m-0">
      <span class="i-repo text-secondary text-sm" />
      <span class="ml-2 opacity-75">{name}</span>
      <span class="px-2 py-1 ml-2 border-base rounded-lg text-secondary text-xs">Public</span>
    </p>
    {description && <p class="mt-2 mb-0 text-secondary text-sm">{description}</p>}
    <p class="flex mt-2 mb-0 text-secondary text-sm">
      {language && (
        <span class="flex items-center mr-3">
          <span class="inline-block w-3 h-3 rounded-full bg-red" />
          <span class="ml-1">{language}</span>
        </span>
      )}
      {stargazers_count > 0 && (
        <span class="flex items-center mr-3">
          <span class="i-star" />
          <span class="ml-1">{stargazers_count}</span>
        </span>
      )}
      {forks > 0 && (
        <span class="flex items-center">
          <span class="i-fork" />
          <span class="ml-1">{forks}</span>
        </span>
      )}
    </p>
  </div>
</a>
