---
import BaseHead from '~/components/BaseHead.astro'
import Header from '~/components/Header.astro'
import Footer from '~/components/Footer.astro'

export interface Props {
	title?: string
	description?: string
  frontmatter?: {
    title?: string
    description?: string
  }
}

const { title, description, frontmatter = {} } = Astro.props
const t = title || frontmatter.title
const desc = description || frontmatter.description
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={t} description={desc} />
  </head>
  <body class="px-6 pb-10 mx-auto max-w-75ch min-h-screen bg-base text-base font-sans">
    <Header />
    <main>
      <article class="prose max-w-75ch">
        <h1>{t}</h1>
        {desc && <p class="opacity-50 italic">{desc}</p>}
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
